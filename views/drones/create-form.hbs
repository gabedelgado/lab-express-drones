<h2>Create a new drone</h2>
{{#if thetitle}}
<h3>{{thetitle}}</h3>
{{/if}}
<form action="/drones/create" method="POST">
<input type="text" name="name" id="name" placeholder="name of drone">
<input type="text" name="propellers" id="propellers" placeholder="number of propellers">
<input type="text" name="maxSpeed" id="maxSpeed" placeholder="max speed">
<button type="submit">Add drone</button>
</form>